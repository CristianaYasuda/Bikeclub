<!-- views/laundry/dashboard.hbs -->
<h2> Your Bike Club Events  </h2>

<ul>
  <li> <a href="/member"> Find a Member </a> </li>
  <li> <a href="/logout"> Log Out </a> </li>
</ul>

{{#if currentUserInfo.isMember}}
  <h3> You are a member </h3>

  {{!-- <p> --}}
    {{!-- Your laundering fee is --}}
    {{!-- <b>${{ currentUserInfo.fee }}.</b> --}}
  {{!-- </p> --}}
{{else}}
  <h3> Want to become a member? </h3>

  <form action="/member" method="post">
    {{!-- <div> --}}
      {{!-- <label for="fee-input"> Set your fee </label> --}}
      {{!-- <input type="number" name="fee" id="fee-input"> --}}
    {{!-- </div> --}}

    <button> Become a Member </button>
  </form>
{{/if}}

<h3> Pending Events </h3>

<ul>
{{#each events}}
    <li>
      <h4> {{ this.eventDate }} </h4>

      <ul>
        <li> <b>User</b>: {{ this.user.name }} </li>
        <li> <b>Member</b>: {{ this.member.name }} </li>
      </ul>
    </li>
{{/each}}
</ul>

